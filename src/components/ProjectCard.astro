---
import type { CollectionEntry } from "astro:content";
const { entry } = Astro.props as { entry: CollectionEntry<"projects"> };
const { data, slug } = entry;
---
<a href={`/projects/${slug}`} class="block border border-bc-border rounded-xl p-4 hover:-translate-y-0.5 transition transform hover:border-bc-accent/60 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-bc-accent">
  <div class="font-mono text-sm opacity-80 mb-1">{data.status}</div>
  <h3 class="text-lg font-semibold mb-1">{data.title}</h3>
  {data.summary && <p class="text-sm opacity-90 mb-2">{data.summary}</p>}
  {data.tags?.length ? <div class="flex flex-wrap gap-2 text-xs opacity-80">
    {data.tags.map(t => <span class="px-2 py-0.5 border border-bc-border/80 rounded">{t}</span>)}
  </div> : null}
</a>
