---
import "../styles/global.css";
const { title = "Blue Coast Software", description = "Independent guild of tools & games.", } = Astro.props;
---
<html lang="en" data-theme="bluecoast" class="bg-bc-ink text-bc-foam">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  </head>
  <body data-theme="bluecoast" class="min-h-screen font-sans bg-bc-ink text-bc-foam">
    <header class="max-w-5xl mx-auto px-4 py-6 flex items-center justify-between border-b border-bc-border">
      <a href="/" class="font-mono text-sm tracking-widest uppercase">Blue Coast</a>
      <nav class="font-mono text-sm space-x-4">
        <a href="/projects" class="opacity-90 hover:opacity-100 hover:text-bc-accent">Projects</a>
        <a href="/about" class="opacity-90 hover:opacity-100 hover:text-bc-accent">About</a>
      </nav>
    </header>

    <main class="max-w-5xl mx-auto px-4">
      <slot />
    </main>

    <footer class="max-w-5xl mx-auto px-4 py-12 opacity-70 border-t border-bc-border">
      <div class="font-mono text-xs">Â© {new Date().getFullYear()} Blue Coast Software</div>
    </footer>
  </body>
</html>
