---
import Base from "../../layouts/Base.astro";
import ProjectCard from "../../components/ProjectCard.astro";
import { getCollection } from "astro:content";
const projects = (await getCollection("projects"))
  .sort((a,b) => b.data.order - a.data.order);
---
<Base title="Projects Â· Blue Coast">
  <h1 class="font-mono text-2xl md:text-3xl my-6 text-bc-muted">Projects</h1>
  <div class="grid gap-4 md:gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
    {projects.map(p => <ProjectCard entry={p} />)}
  </div>
</Base>
